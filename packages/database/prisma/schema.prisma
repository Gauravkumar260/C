generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  DEALER
  ADMIN
}

enum KycStatus {
  PENDING
  VERIFIED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum OrderStatus {
  PENDING
  PAID
  FULFILLED
  CANCELLED
}

enum OptionType {
  COLOR
  WHEELS
  TRIM
  INTERIOR
  ACCESSORY
}

model User {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  email          String          @unique
  password       String
  hashedRefreshToken String?
  name           String?
  role           Role            @default(CUSTOMER)
  kycStatus      KycStatus       @default(PENDING)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  bookings       Booking[]
  orders         Order[]
  customizations Customization[]
}

model Vehicle {
  id             String                @id @default(auto()) @map("_id") @db.ObjectId
  make           String
  model          String
  slug           String                @unique
  basePrice      Float
  description    String?
  assets         Json?                 @default("{}")
  options        ConfigurationOption[]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
  customizations Customization[]
}

model ConfigurationOption {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  type             OptionType
  price            Float
  vehicleId        String     @db.ObjectId
  vehicle          Vehicle    @relation(fields: [vehicleId], references: [id])
  assets           Json?      @default("{}")
  incompatibleWith Json?      @default("[]")
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model Customization {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  vehicleId  String   @db.ObjectId
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  config     Json
  preview    String?
  totalPrice Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  orders     Order[]
}

model Order {
  id                    String        @id @default(auto()) @map("_id") @db.ObjectId
  userId                String        @db.ObjectId
  user                  User          @relation(fields: [userId], references: [id])
  customizationId       String        @db.ObjectId
  customization         Customization @relation(fields: [customizationId], references: [id])
  configurationSnapshot Json
  totalPrice            Float
  status                OrderStatus   @default(PENDING)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

model Booking {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  userId        String        @db.ObjectId
  user          User          @relation(fields: [userId], references: [id])
  dealershipId  String
  scheduledTime DateTime
  status        BookingStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([dealershipId, scheduledTime])
}
